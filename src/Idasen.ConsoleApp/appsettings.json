{
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File",
      "Idasen.Launcher"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "System": "Information"
      }
    },
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithProcessId",
      "WithThreadId",
      "WithCaller"
    ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:HH:mm:ss} [{Level}] {Message}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "./logs/idasen-desk.log",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level}] {Message}{NewLine}{Exception}",
          "rollOnFileSizeLimit": true,
          "fileSizeLimitBytes": 4194304,
          "retainedFileCountLimit": 5,
          "rollingInterval": "Minute",
          "hooks": "Idasen.Launcher.LoggingFileHooks, Idasen.Launcher"
        }
      }
    ]
  },
  "DeskMoverSettings": {
    // Interval for movement evaluation and sampling.
    "TimerInterval": "00:00:00.100",
    // Minimum tolerance band when approaching the target height.
    "NearTargetBaseTolerance": 2,
    //  Maximum dynamic tolerance based on predicted movement until stop.
    "NearTargetMaxDynamicTolerance": 10,
    // Compensation (in mm units) added to predicted movement to counter systematic overshoot.
    // Increase if desk still stops beyond target, decrease if it now undershoots. Default targets ~1cm correction.
    "OvershootCompensation": 10
  }
}